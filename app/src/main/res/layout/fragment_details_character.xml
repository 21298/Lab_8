<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsCharacterFragment">

    <ImageView
        android:id="@+id/imageView_fragmentDetailsCharacter_charImage"
        android:layout_width="@dimen/default_icon_size_character"
        android:layout_height="@dimen/default_icon_size_character"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textView_fragmentDetailsCharacter_nameCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageView_fragmentDetailsCharacter_charImage"
        app:layout_constraintStart_toStartOf="@id/imageView_fragmentDetailsCharacter_charImage"
        app:layout_constraintEnd_toEndOf="@id/imageView_fragmentDetailsCharacter_charImage"
        tools:text="NAME"/>

    <TextView
        android:id="@+id/textView_specieChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/specie_label"
        android:layout_marginTop="@dimen/margin_TOP_labesl_characterDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_fragmentDetailsCharacter_specieChar"
        app:layout_constraintTop_toBottomOf="@id/textView_fragmentDetailsCharacter_nameCharacter"
        tools:text="SPECIE" />

    <TextView
        android:id="@+id/textView_fragmentDetailsCharacter_specieChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_TOP_labesl_characterDetails"
        app:layout_constraintStart_toEndOf="@id/textView_specieChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fragmentDetailsCharacter_nameCharacter"
        tools:text="specie"/>

    <TextView
        android:id="@+id/textView_statusChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_fragmentDetailsCharacter_statusChar"
        app:layout_constraintTop_toBottomOf="@id/textView_specieChar"
        tools:text="STATUS"/>

    <TextView
        android:id="@+id/textView_fragmentDetailsCharacter_statusChar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/textView_statusChar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fragmentDetailsCharacter_specieChar"
        tools:text="status"/>

    <TextView
        android:id="@+id/txtView_genderCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtView_fragmentDetailsCharacter_genderCharacter"
        app:layout_constraintTop_toBottomOf="@id/textView_statusChar"
        tools:text="GENDER"/>

    <TextView
        android:id="@+id/txtView_fragmentDetailsCharacter_genderCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txtView_genderCharacter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fragmentDetailsCharacter_statusChar"
        tools:text="gender"/>



</androidx.constraintlayout.widget.ConstraintLayout>